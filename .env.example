# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram to get your token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Chat ID to send alerts to (can be a user ID or channel ID)
# You can get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Polymarket Event Configuration
# The slug from the Polymarket URL (e.g., us-strikes-iran-by)
EVENT_SLUG=us-strikes-iran-by

# Monitoring Settings
# How often to check prices (in seconds)
POLL_INTERVAL_SECONDS=60

# Price change threshold to trigger alert (0.05 = 5%)
PRICE_CHANGE_THRESHOLD=0.05

# Cooldown between alerts for the same market (in seconds)
ALERT_COOLDOWN_SECONDS=300
